@model WebControlVacunas_CodigoX.Models.Nino

@{
    ViewData["Title"] = "Eliminar Niño";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-7 col-md-9">

            <div class="card shadow-sm border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">Eliminar Niño</h4>
                </div>

                <div class="card-body">
                    <div class="alert alert-warning" role="alert">
                        Esta acción no se puede deshacer. ¿Deseas eliminar este registro?
                    </div>

                    <dl class="row mb-0">
                        <dt class="col-sm-4">Apellidos</dt>
                        <dd class="col-sm-8">@Model.Apellidos</dd>

                        <dt class="col-sm-4">Nombres</dt>
                        <dd class="col-sm-8">@Model.Nombres</dd>

                        <dt class="col-sm-4">DNI</dt>
                        <dd class="col-sm-8">@Model.Dni</dd>

                        <dt class="col-sm-4">Fecha de Nacimiento</dt>
                        <dd class="col-sm-8">@Model.FechaNacimiento.ToString("dd/MM/yyyy")</dd>

                        <dt class="col-sm-4">Género</dt>
                        <dd class="col-sm-8">@Model.Genero</dd>
                    </dl>
                </div>

                <div class="card-footer d-flex justify-content-end gap-2">
                    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>

                    <form asp-action="Delete" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger">
                            Sí, eliminar
                        </button>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>
