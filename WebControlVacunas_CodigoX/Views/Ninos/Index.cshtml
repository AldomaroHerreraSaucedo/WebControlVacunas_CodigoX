@model IEnumerable<WebControlVacunas_CodigoX.Models.Nino>

@{
    ViewData["Title"] = "Niños registrados";
}

<div class="container mt-4">
    <div>
        <h2>Listado de Niños</h2>

        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Nuevo registro
        </a>
    </div>
    <div class="card shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-striped table-hover mb-0">
                    <thead class="table-dark">
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Apellidos)</th>
                            <th>@Html.DisplayNameFor(model => model.Nombres)</th>
                            <th>@Html.DisplayNameFor(model => model.Dni)</th>
                            <th>@Html.DisplayNameFor(model => model.FechaNacimiento)</th>
                            <th>@Html.DisplayNameFor(model => model.Genero)</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="6" class="text-center text-muted py-4">
                                    No existen registros de niños.
                                </td>
                            </tr>
                        }
                        else
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Apellidos</td>
                                    <td>@item.Nombres</td>
                                    <td>@item.Dni</td>
                                    <td>@item.FechaNacimiento.ToString("dd/MM/yyyy")</td>
                                    <td>@item.Genero</td>
                                    <td class="text-center">
                                        <a asp-action="Details" asp-route-id="@item.Id"
                                           class="btn btn-sm btn-info text-white">
                                            Ver
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.Id"
                                           class="btn btn-sm btn-warning">
                                            Editar
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id"
                                           class="btn btn-sm btn-danger">
                                            Eliminar
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
