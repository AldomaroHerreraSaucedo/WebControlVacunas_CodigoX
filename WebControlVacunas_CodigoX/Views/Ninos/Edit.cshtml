@model WebControlVacunas_CodigoX.Models.Nino

@{
    ViewData["Title"] = "Editar Niño";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-7 col-md-9">

            <div class="card shadow-sm">
                <div class="card-header bg-warning">
                    <h4 class="mb-0">Editar Niño</h4>
                </div>

                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        @Html.AntiForgeryToken()

                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <input type="hidden" asp-for="Id" />

                        <div class="mb-3">
                            <label asp-for="Apellidos" class="form-label"></label>
                            <input asp-for="Apellidos" class="form-control" placeholder="Ej. Pérez Gómez" />
                            <span asp-validation-for="Apellidos" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Nombres" class="form-label"></label>
                            <input asp-for="Nombres" class="form-control" placeholder="Ej. Juan Carlos" />
                            <span asp-validation-for="Nombres" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Dni" class="form-label"></label>
                            <input asp-for="Dni" class="form-control" placeholder="Ej. 12345678" />
                            <span asp-validation-for="Dni" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="FechaNacimiento" class="form-label"></label>
                            <input asp-for="FechaNacimiento" class="form-control" type="date" />
                            <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Genero" class="form-label"></label>
                            <select asp-for="Genero" class="form-select" asp-items="ViewBag.Genero">
                                <option value="">-- Seleccione --</option>
                            </select>
                            <span asp-validation-for="Genero" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-end gap-2">
                            <a asp-action="Index" class="btn btn-secondary">Volver</a>
                            <button type="submit" class="btn btn-warning">Guardar cambios</button>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
