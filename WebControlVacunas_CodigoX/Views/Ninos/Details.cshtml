@model WebControlVacunas_CodigoX.Models.Nino

@{
    ViewData["Title"] = "Detalle del Niño";
}

<div class="container mt-4">

    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Detalle del Niño</h4>
        </div>

        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-4">Apellidos</dt>
                <dd class="col-sm-8">@Model.Apellidos</dd>

                <dt class="col-sm-4">Nombres</dt>
                <dd class="col-sm-8">@Model.Nombres</dd>

                <dt class="col-sm-4">DNI</dt>
                <dd class="col-sm-8">@Model.Dni</dd>

                <dt class="col-sm-4">Fecha de Nacimiento</dt>
                <dd class="col-sm-8">
                    @Model.FechaNacimiento.ToString("dd/MM/yyyy")
                </dd>

                <dt class="col-sm-4">Género</dt>
                <dd class="col-sm-8">@Model.Genero</dd>
            </dl>
        </div>

        <div class="card-footer text-end">
            <a asp-action="Edit" asp-route-id="@Model.Id"
               class="btn btn-warning me-2">
                Editar
            </a>
            <a asp-action="Index"
               class="btn btn-secondary">
                Volver
            </a>
        </div>
    </div>
</div>
