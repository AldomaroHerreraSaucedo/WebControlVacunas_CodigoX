@model IEnumerable<WebControlVacunas_CodigoX.Models.CronogramaVacunacion>

@{
    ViewData["Title"] = "Cronograma de Vacunación";
    var hoy = DateTime.Today;

    var lista = Model?.ToList() ?? new List<WebControlVacunas_CodigoX.Models.CronogramaVacunacion>();

    var total = lista.Count;
    var aplicadas = lista.Count(x => x.FechaVacunacion.HasValue);
    var atrasadas = lista.Count(x => !x.FechaVacunacion.HasValue && x.FechaProgramadaVacunacion.Date < hoy);
    var pendientes = total - aplicadas - atrasadas;

    var grupos = lista
        .OrderBy(x => x.Vacuna != null ? x.Vacuna.Nombre : "")
        .ThenBy(x => x.Dosis)
        .ThenBy(x => x.FechaProgramadaVacunacion)
        .GroupBy(x => x.Vacuna != null ? x.Vacuna.Nombre : "Sin vacuna");
}

<div class="container mt-4">

    <!-- Header -->
    <div class="d-flex flex-wrap justify-content-between align-items-center gap-2 mb-3">
        <div>
            <h2 class="mb-0">Cronograma de Vacunación</h2>
            <small class="text-muted">Seguimiento organizado por vacuna</small>
        </div>

        <div class="d-flex gap-2">
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Nueva programación
            </a>
        </div>
    </div>

    <!-- Métricas -->
    <div class="row g-3 mb-4">
        <div class="col-6 col-lg-3">
            <div class="card shadow-sm">
                <div class="card-body">
                    <div class="text-muted">Total</div>
                    <div class="fs-4 fw-bold">@total</div>
                </div>
            </div>
        </div>
        <div class="col-6 col-lg-3">
            <div class="card shadow-sm border-success">
                <div class="card-body">
                    <div class="text-muted">Aplicadas</div>
                    <div class="fs-4 fw-bold text-success">@aplicadas</div>
                </div>
            </div>
        </div>
        <div class="col-6 col-lg-3">
            <div class="card shadow-sm border-warning">
                <div class="card-body">
                    <div class="text-muted">Pendientes</div>
                    <div class="fs-4 fw-bold text-warning">@pendientes</div>
                </div>
            </div>
        </div>
        <div class="col-6 col-lg-3">
            <div class="card shadow-sm border-danger">
                <div class="card-body">
                    <div class="text-muted">Atrasadas</div>
                    <div class="fs-4 fw-bold text-danger">@atrasadas</div>
                </div>
            </div>
        </div>
    </div>

    @if (!lista.Any())
    {
        <div class="alert alert-secondary">
            No hay registros en el cronograma.
        </div>
    }
    else
    {
        <!-- Grupos por vacuna -->
        <div class="accordion" id="cronogramaAccordion">
            @{
                var idx = 0;
            }

            @foreach (var grupo in grupos)
            {
                var collapseId = $"collapse_{idx}";
                var headingId = $"heading_{idx}";

                // resumen del grupo
                var gTotal = grupo.Count();
                var gAplicadas = grupo.Count(x => x.FechaVacunacion.HasValue);
                var gAtrasadas = grupo.Count(x => !x.FechaVacunacion.HasValue && x.FechaProgramadaVacunacion.Date < hoy);
                var gPendientes = gTotal - gAplicadas - gAtrasadas;

                <div class="accordion-item mb-2 border rounded shadow-sm">
                    <h2 class="accordion-header" id="@headingId">
                        <button class="accordion-button @(idx == 0 ? "" : "collapsed")" type="button"
                                data-bs-toggle="collapse" data-bs-target="#@collapseId"
                                aria-expanded="@(idx == 0 ? "true" : "false")" aria-controls="@collapseId">

                            <div class="d-flex flex-wrap align-items-center justify-content-between w-100 gap-2">
                                <div class="fw-semibold">@grupo.Key</div>

                                <div class="d-flex flex-wrap gap-2">
                                    <span class="badge bg-dark">Total: @gTotal</span>
                                    <span class="badge bg-success">Aplicadas: @gAplicadas</span>
                                    <span class="badge bg-warning text-dark">Pendientes: @gPendientes</span>
                                    <span class="badge bg-danger">Atrasadas: @gAtrasadas</span>
                                </div>
                            </div>
                        </button>
                    </h2>

                    <div id="@collapseId" class="accordion-collapse collapse @(idx == 0 ? "show" : "")"
                         aria-labelledby="@headingId" data-bs-parent="#cronogramaAccordion">
                        <div class="accordion-body p-0">

                            <div class="table-responsive">
                                <table class="table table-hover mb-0 align-middle">
                                    <thead class="table-light">
                                        <tr>
                                            <th style="width: 90px;">Dosis</th>
                                            <th style="width: 170px;">Programada</th>
                                            <th style="width: 170px;">Aplicada</th>
                                            <th style="width: 120px;">Tarjeta</th>
                                            <th style="width: 140px;">Estado</th>
                                            <th class="text-center" style="width: 220px;">Acciones</th>
                                        </tr>
                                    </thead>

                                    <tbody>
                                        @foreach (var item in grupo)
                                        {
                                            var aplicada = item.FechaVacunacion.HasValue;
                                            var atrasadaItem = !aplicada && item.FechaProgramadaVacunacion.Date < hoy;

                                            string badgeClass = aplicada ? "bg-success"
                                            : atrasadaItem ? "bg-danger"
                                            : "bg-warning text-dark";

                                            string badgeText = aplicada ? "Aplicada"
                                            : atrasadaItem ? "Atrasada"
                                            : "Pendiente";

                                            <tr>
                                                <td class="fw-semibold">@item.Dosis</td>
                                                <td>@item.FechaProgramadaVacunacion.ToString("dd/MM/yyyy")</td>
                                                <td>
                                                    @(item.FechaVacunacion.HasValue
                                                                                            ? item.FechaVacunacion.Value.ToString("dd/MM/yyyy")
                                                                                            : "-")
                                    </td>
                                    <td>#@item.TarjetaControl?.Id</td>
                                    <td>
                                        <span class="badge @badgeClass">@badgeText</span>
                                    </td>
                                    <td class="text-center">
                                        <a asp-action="Details" asp-route-id="@item.Id"
                                           class="btn btn-sm btn-info text-white">
                                            Ver
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.Id"
                                           class="btn btn-sm btn-warning">
                                            Editar
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id"
                                           class="btn btn-sm btn-danger">
                                            Eliminar
                                        </a>
                                    </td>
                                </tr>
                                                                }
                                    </tbody>
                                </table>
                            </div>

                        </div>
                    </div>
                </div>

                idx++;
            }
        </div>
    }

</div>
