@model WebControlVacunas_CodigoX.Models.TarjetaControl

@{
    ViewData["Title"] = "Detalle de Tarjeta de Control";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-7 col-md-9">

            <div class="card shadow-sm">
                <div class="card-header bg-info text-white">
                    <h4 class="mb-0">Detalle de Tarjeta de Control</h4>
                </div>

                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4">Fecha de Apertura</dt>
                        <dd class="col-sm-8">
                            @Model.FechaApertura.ToString("dd/MM/yyyy")
                        </dd>

                        <dt class="col-sm-4">Niño</dt>
                        <dd class="col-sm-8 fw-semibold">
                            @Model.Nino.Apellidos @Model.Nino.Nombres
                        </dd>
                    </dl>
                </div>

                <div class="card-footer d-flex justify-content-end gap-2">
                    <a asp-action="Index" class="btn btn-secondary">
                        Volver
                    </a>
                    <a asp-action="Edit" asp-route-id="@Model.Id"
                       class="btn btn-warning">
                        Editar
                    </a>
                </div>
            </div>

        </div>
    </div>
</div>
