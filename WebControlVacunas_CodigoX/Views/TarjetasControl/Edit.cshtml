@model WebControlVacunas_CodigoX.Models.TarjetaControl

@{
    ViewData["Title"] = "Editar Tarjeta de Control";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-7 col-md-9">

            <div class="card shadow-sm">
                <div class="card-header bg-warning">
                    <h4 class="mb-0">Editar Tarjeta de Control</h4>
                </div>

                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        @Html.AntiForgeryToken()

                        <div asp-validation-summary="ModelOnly"
                             class="alert alert-danger"
                             role="alert"></div>

                        <input type="hidden" asp-for="Id" />

                        <div class="mb-3">
                            <label asp-for="FechaApertura" class="form-label"></label>
                            <input asp-for="FechaApertura" class="form-control" type="date" />
                            <span asp-validation-for="FechaApertura" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="NinoId" class="form-label"></label>
                            <select asp-for="NinoId" class="form-select" asp-items="ViewBag.NinoId">
                                <option value="">-- Seleccione --</option>
                            </select>
                            <span asp-validation-for="NinoId" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-end gap-2">
                            <a asp-action="Index" class="btn btn-secondary">
                                Volver
                            </a>
                            <button type="submit" class="btn btn-warning">
                                Guardar cambios
                            </button>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
