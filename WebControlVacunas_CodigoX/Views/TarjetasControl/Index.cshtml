@model IEnumerable<WebControlVacunas_CodigoX.Models.TarjetaControl>

@{
    ViewData["Title"] = "Tarjetas de Control";
}

<div class="container mt-4">

    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h2 class="mb-0">Tarjetas de Control</h2>
            <small class="text-muted">Seguimiento de vacunación por niño</small>
        </div>

        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Nueva tarjeta
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-striped table-hover mb-0 align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th>Fecha de Apertura</th>
                            <th>Niño</th>
                            <th class="text-center" style="width: 340px;">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="3" class="text-center text-muted py-4">
                                    No hay tarjetas de control registradas.
                                </td>
                            </tr>
                        }
                        else
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.FechaApertura.ToString("dd/MM/yyyy")</td>
                                    <td class="fw-semibold">
                                        @item.Nino.Apellidos @item.Nino.Nombres
                                    </td>
                                    <td class="text-center">
                                        <a asp-controller="CronogramaVacunacion"
                                           asp-action="Index"
                                           asp-route-id="@item.Id"
                                           class="btn btn-sm btn-success">
                                            Cronograma
                                        </a>

                                        <a asp-action="Details"
                                           asp-route-id="@item.Id"
                                           class="btn btn-sm btn-info text-white">
                                            Ver
                                        </a>

                                        <a asp-action="Edit"
                                           asp-route-id="@item.Id"
                                           class="btn btn-sm btn-warning">
                                            Editar
                                        </a>

                                        <a asp-action="Delete"
                                           asp-route-id="@item.Id"
                                           class="btn btn-sm btn-danger">
                                            Eliminar
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
