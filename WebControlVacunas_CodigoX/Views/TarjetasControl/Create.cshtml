@model WebControlVacunas_CodigoX.Models.TarjetaControl
@{
    ViewData["Title"] = "Crear Tarjeta de Control";
    var nino = ViewBag.NinoEncontrado as WebControlVacunas_CodigoX.Models.Nino;
    var keyword = Context.Request.Query["keyword"].ToString();
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">

            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Crear Tarjeta de Control</h4>
                </div>

                <div class="card-body">
                    <p class="text-muted mb-3">
                        Paso 1: busca al niño por DNI. Paso 2: crea la tarjeta de control.
                    </p>

                    <!-- BUSQUEDA -->
                    <div class="border rounded p-3 mb-4">
                        <h6 class="mb-3">Buscar niño por DNI</h6>

                        <form asp-action="Create" method="get" class="row g-2 align-items-end">
                            <div class="col-sm-8">
                                <label class="form-label">DNI</label>
                                <input type="text"
                                       name="keyword"
                                       value="@keyword"
                                       class="form-control"
                                       placeholder="Ej. 12345678" />
                            </div>
                            <div class="col-sm-4 d-grid">
                                <button type="submit" class="btn btn-primary">
                                    Buscar
                                </button>
                            </div>
                        </form>
                    </div>

                    @if (nino != null)
                    {
                        <div class="alert alert-success" role="alert">
                            <strong>Niño encontrado:</strong> @nino.Nombres @nino.Apellidos
                        </div>

                        <!-- CREACION -->
                        <div class="border rounded p-3">
                            <h6 class="mb-3">Crear tarjeta</h6>

                            <form asp-action="Create" method="post">
                                @Html.AntiForgeryToken()

                                <input type="hidden" asp-for="NinoId" value="@nino.Id" />

                                <div class="mb-3">
                                    <label class="form-label">Niño</label>
                                    <input type="text"
                                           class="form-control"
                                           value="@($"{nino.Nombres} {nino.Apellidos}")"
                                           readonly />
                                </div>

                                <div class="mb-3">
                                    <label asp-for="FechaApertura" class="form-label"></label>
                                    <input asp-for="FechaApertura"
                                           class="form-control"
                                           value="@ViewBag.FechaApertura"
                                           readonly />
                                    <span asp-validation-for="FechaApertura" class="text-danger"></span>
                                </div>

                                <div class="d-flex justify-content-end gap-2">
                                    <a asp-action="Index" class="btn btn-secondary">
                                        Volver
                                    </a>
                                    <button type="submit" class="btn btn-success">
                                        Crear tarjeta
                                    </button>
                                </div>
                            </form>
                        </div>
                    }
                    else if (!string.IsNullOrWhiteSpace(keyword))
                    {
                        <div class="alert alert-danger" role="alert">
                            No se encontró ningún niño con ese DNI.
                        </div>

                        <div class="d-flex justify-content-end">
                            <a asp-action="Index" class="btn btn-secondary">
                                Volver
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="d-flex justify-content-end">
                            <a asp-action="Index" class="btn btn-secondary">
                                Volver
                            </a>
                        </div>
                    }
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
