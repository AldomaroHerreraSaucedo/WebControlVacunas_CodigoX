@model WebControlVacunas_CodigoX.Models.TarjetaControl
@{
    ViewData["Title"] = "Crear Tarjeta de Control";
    var nino = ViewBag.NinoEncontrado as WebControlVacunas_CodigoX.Models.Nino;
}

<h1>Crear Tarjeta de Control</h1>

<form asp-action="Create" method="get" class="d-flex mb-3" style="max-width: 400px;">
    <input type="text" name="keyword" class="form-control me-2" placeholder="Buscar niño por DNI..." />
    <button type="submit" class="btn btn-primary">Buscar</button>
</form>





@if (nino != null)
{
    <div class="alert alert-success">
        <strong>Niño encontrado:</strong> @nino.Nombres @nino.Apellidos
    </div>

    <form asp-action="Create" method="post">
        <input type="hidden" asp-for="NinoId" value="@nino.Id" />

        <div class="form-group mb-3">
            <label>Nombre del niño:</label>
            <input type="text" class="form-control" value="@($"{nino.Nombres} {nino.Apellidos}")" readonly />
        </div>

        <div class="form-group mb-3">
            <label asp-for="FechaApertura" class="control-label"></label>
            <input asp-for="FechaApertura" class="form-control" value="@ViewBag.FechaApertura" readonly />
            <span asp-validation-for="FechaApertura" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input type="submit" value="Crear Tarjeta" class="btn btn-success" />
        </div>
    </form>
}
else if (!string.IsNullOrEmpty(Context.Request.Query["keyword"]))
{
    <div class="alert alert-danger">
        No se encontró ningún niño con ese DNI.
    </div>
}









<div class="mt-3">
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
